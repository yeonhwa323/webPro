 </script>
  <script>
 
  function calc(n1,n2){
 	   let result = n1 + n2;
 	   //return result;
 	   disp( result );
  }
  function disp(result){
 	   $("p#demo").html( result );	   
  }
 
  // disp [함수 등록] / disp() [함수 호출]
  calc(1,2, disp );
  
 </script>
