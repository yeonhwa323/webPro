    // d = new Date(y,m,d,h,m,s,ms)
    
    // [문제] 24.5.10 무슨 요일 ?
    // d = new Date("2024-5-10");    
    d = new Date(2024, 5-1, 10);  
    
    // 1년 더하기
    d.setFullYear(1);
    
    document.write( d.toLocaleDateString() + "<br>" );    
    //document.write( d.toLocaleTimeString() + "<br>" );    // 00:00:00s
    
    console.log( d.getFullYear() ); // 2024
    console.log( d.getMonth()+1 );  // 5
    console.log( d.getDate() );  // 10
    
    console.log( d.getHours() ); 
    console.log( d.getMinutes() ); 
    console.log( d.getSeconds() ); 
    console.log( d.getMilliseconds() ); 
    
    console.log( "일월화수목금토"[ d.getDay() ]); // 금
    
