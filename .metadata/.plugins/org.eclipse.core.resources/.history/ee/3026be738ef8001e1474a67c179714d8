	<script>
    let today = new Date();
    let tYear = today.getFullYear(); // 2024
    let tMonth = today.getMonth()+1;   // 4월(3)
    let year = tYear;  // 2024
    let month = tMonth;  // 4월(3)
        
    // 1. cmbYear
    for (let i = 1970; i <= 2050; i++) {
      // <option value="1970">1970</option>
	  $("#cmbyear").append( $("<option></option>").text(i));
	}// for
	$("cmbyear").val(tYear);
	
	// 2. cmbMonth
	for (let i = 1; i <= 12; i++) {
	  $("#cmbmonth").append( $("<option></option>").text(i));
	}// for
	$("cmbmonth").val(tMonth); 
	
	// 3. cmbDate
	// tYear, tMonth 1~30
		
  </script>
	<script>
    function getLastDay(year,month){
    	let d = new Date(year, month );
    	d.setDate( d.getDate() -1);
    	return d.getDate(); // 28,29,30,31
    }
    function getDayOfWeek(year,month,date){
    	let d = new Date(year, month-1, date);
    	return d.getDay();  // 일(0)월(1)~금(5)토(6)
    }
    
    function printCalendar(year, month) {
    	//<span id="month">August</span><br> 
        //<span id="year"   style="font-size: 18px">2017</span> 
        $("#month").text(month); // 4
        $("#year").text(year); // 2024
        
        let datOfWeek = getDayOfWeek(year,month, 1);
        let lastDay = getLastDay(year, month);
        
        /* <ul class="days"> */
        $("ul.days").empty();   
        // $("ul.days").html();
        
        // 달력날짜 li 태그 그리기
        for (var i = 0; i < dayOfWeek; i++) {
        	$("ul.days").append("<li></li>");
		}//for
		
		// 1 ~ lastDay li 태그 그리기
        for (var i = 1; i <= lastDay; i++) {
        	$("ul.days").append(`<li>${i}</li>`);
		}//for
    }
    
    printCalendar( year, month );
  </script>
