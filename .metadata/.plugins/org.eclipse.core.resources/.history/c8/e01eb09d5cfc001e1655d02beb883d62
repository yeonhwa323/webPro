  //$(document).ready(function(){
  window.jQuery(function(){
	  window.jQuery("button").on("click", function(){
		  window.jQuery("#demo").html("버튼 클릭!!!"); 
			
			// $ == jQuery == window.jQuery 약어
			
			// $ 기호는 js 변수를 선언할 때 사용할 수 있는 기호
			// [문제]
			// 다른 js 라이브러리(프레임워크)를 함께 사용하다보면
			// $ 기호가 다른 의미로 사용되어질 경우가 
			// 가끔 있다.
			// $ 충돌이 발생해서...오류발생...
			
		});
  });
  
</script>

