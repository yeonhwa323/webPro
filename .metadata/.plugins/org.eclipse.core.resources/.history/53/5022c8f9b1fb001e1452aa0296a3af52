 <script>
   function search_dong(){
	   $("#searchResult").css("visibility", "visible");
	   $(".box").css("visibility", "visible");
   }
   
   function sendAddr(zip1, zip2, addr1){
	  // self
	  window.opener.document.getElementById("zip1").value = zip1;
	  window.opener.document.getElementById("zip2").value = zip2;
	  window.opener.document.getElementById("addr1").value = addr1;
	  
	  self.close();
	   
   }
