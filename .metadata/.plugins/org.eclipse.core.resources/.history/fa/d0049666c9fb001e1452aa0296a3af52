<img src="../images/item01.gif" alt="" />

<script>
  //item01.gif~ item21.gif
  function getRandom( min, max){
    	return Math.floor( Math.random()*(max-min+1)+min);
  }
  
  // 컨텍스트 메뉴( contextmenu) : 오른쪽 클릭시 나오는 메뉴
  // 오른쪽 클릭시 나오는 메뉴 : 컨텍스트 메뉴( contextmenu )
  document.oncontextmenu = function (){
	  // alert("오른쪽 마우스는 사용할 수 없습니다.");
	  return false; // 이벤트 취소
  }
  
  document.onmousedown = function (){
	  // console.log( event.button );
	  if( event.button == 0 ){ // 왼쪽 마우스 
		  
		  document.title = event.clientX +", " + event.clientY
		     +" / " + $("img").width();
	  
		  let img = document.createElement("img");
		  // 01 ~ 21
		  var imgNo = getRandom( 1, 21 ).toString().padStart(2, 0);
		  var src = `../images/item${imgNo}.gif`  ;
		  img.setAttribute("src", src);
		  img.classList.add("box");
		  
		  let left = event.clientX - $("img").width()/2;
		  let top = event.clientY - $("img").height()/2;
		  img.setAttribute("style", `left:${left}px;top:${top}px`);
	  
		  document.body.appendChild(img);
	  }else if(event.button == 2){ // 오른쪽 마우스
		  document.body.removeChild( event.srcElement );
	  }else if(event.button == 1){ // 가운데 휠 마우스
		  var imgs = document.querySelectorAll("img.box");
	      for (let img of imgs) {
	    	  // document.body.removeChild(img);
			  img.remove();
		  }
	  }
  }
  
  
</script>

</body>
